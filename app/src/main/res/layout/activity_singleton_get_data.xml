<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingletonGetData">

<include
    android:id="@+id/singletonGetToolbar"
    layout="@layout/toolbar"/>
    <TextView
        android:id="@+id/username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/getUsername"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:text="Username : "/>

    <Button
        android:id="@+id/getUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get username"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/prev_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/getUsername"
        android:text="Previous Screen"
        android:gravity="center"

        />


</RelativeLayout>